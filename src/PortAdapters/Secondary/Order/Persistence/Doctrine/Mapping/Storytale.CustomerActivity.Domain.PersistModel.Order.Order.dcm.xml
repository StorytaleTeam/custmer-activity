<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Storytale\CustomerActivity\Domain\PersistModel\Order\Order" table="orders">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="createdDate" type="datetime" column="created_date"/>
        <field name="status" type="integer" column="status"/>
        <field name="totalPrice" type="float" column="total_price"/>

        <many-to-one field="customer" target-entity="Storytale\CustomerActivity\Domain\PersistModel\Customer\Customer" inversed-by="orders">
            <join-column name="customer_id" referenced-column-name="id"/>
        </many-to-one>

        <one-to-one field="subscription" target-entity="Storytale\CustomerActivity\Domain\PersistModel\Subscription\Subscription">
            <join-column name="subscription_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-many field="productPositions" target-entity="Storytale\CustomerActivity\Domain\PersistModel\Order\ProductPosition" mapped-by="order">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>